doctype 5
html(lang='en', ng-app='ybmDocApp')
  head
    title InDesign API

    link(rel='stylesheet', href='css/bootstrap.css')
    link(rel='stylesheet', href='css/style.less')
  body
    main.container
      header
        nav(class='navbar navbar-inverse navbar-fixed-top', role='navigation')
          div.container
            a.navbar-brand(href='#/') InDesign - Object Model Viewer

      div.row
        div(class='col-md-3', ng-controller='ContentsListCtrl')
          div.input-group
            span.input-group-addon Filter
            input(id='classFilter', class='form-control', ng-model='classFilter')

          hr

          section(ng-repeat='category in classes.topicref')
            div(ng-show='(category.topicref | filter:classFilter).length')
              h3 {{ category.navtitle }}
              ul.list-unstyled
                li(ng-repeat='class in category.topicref | orderBy:"navtitle" | filter:classFilter')
                  a(href='{{ class.href }}') {{ class.navtitle }}

        div(class='col-md-9', role='main')
          div.input-group
            span.input-group-addon Filter
            input(id='elementFilter', class='form-control', ng-model='elementFilter')


          article(ng-view)
            h1 Here is some content

          footer
            p Generated by
              a(href='http://yearbookmachine.com/') Yearbook Machine

    script(src='./js/main.js')
