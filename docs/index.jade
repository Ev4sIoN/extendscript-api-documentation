doctype 5
html(lang='en', ng-app='ybmDocApp')
  head
    title InDesign API

    link(rel='stylesheet', href='css/bootstrap.css')
    link(rel='stylesheet', href='css/style.less')
  body
    main.container
      header
        nav(class='navbar navbar-inverse navbar-fixed-top', role='navigation')
          div.container
            a.navbar-brand(href='#/') InDesign API

            ul(class='nav navbar-nav')
              li
                a(href='#/about') About
              li
                a(href='#/search') Search
              li
                a(href='https://github.com/yearbookmachine/indesign-api-documentation') GitHub
              li
                a(href='http://www.yearbookmachine.com') Yearbook Machine

      div.row
        div(class='col-md-3', ng-controller='ContentsListCtrl')
          div.input-group
            span.input-group-addon Filter
            input(id='classFilter', class='form-control', ng-model='classFilter')

          hr

          section(ng-repeat='category in classes.topicref')
            div(ng-show='(category.topicref | filter:classFilter).length')
              h3 {{ category.navtitle }}
              ul.list-unstyled
                li(ng-repeat='class in category.topicref | orderBy:"navtitle" | filter:classFilter')
                  a(href='#/{{ class.navtitle }}') {{ class.navtitle }}

        div(class='col-md-9', role='main')

          article(ng-view)

          footer
            :markdown
              Generated by [Yearbook Machine](http://yearbookmachine.com/). Help us on [GitHub](https://github.com/yearbookmachine/indesign-api-documentation).

    script(src='./js/main.js')
